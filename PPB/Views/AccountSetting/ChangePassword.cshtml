
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Change Password
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>Account Setting</a></li>
        <li class="active">Change Password</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">User Name</h3>
                </div>
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-4 control-label redAsteriskBefore">Old Password</label>
                            <div class="col-sm-8">
                                @Html.Password("OldPassword", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label redAsteriskBefore">New Password</label>
                            <div class="col-sm-8">
                                @Html.Password("NewPassword", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label redAsteriskBefore">New Password Confirmed</label>
                            <div class="col-sm-8">
                                @Html.Password("ConfirmedNewPassword", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="button" class="btn btn-primary pull-right pwd-save-btn">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

