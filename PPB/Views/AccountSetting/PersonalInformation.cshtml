@{
    ViewBag.Title = "PersonalInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Personal Information</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>Account Setting</a></li>
        <li class="active">Personal Information</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">User Name</h3>
                </div>
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label redAsteriskBefore">Display Name</label>
                            <div class="col-sm-10">
                                @Html.TextBox("XXXX")
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="button" class="btn btn-primary pull-right account-save-btn">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

